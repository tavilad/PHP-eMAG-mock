{% extends 'base.html.twig' %}

{% block title %}OrderItem index{% endblock %}

{% block body %}
    <h1>OrderItem index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Number_of_items</th>
                <th>Total_price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order_item in order_items %}
            <tr>
                <td>{{ order_item.id }}</td>
                <td>{{ order_item.numberOfItems }}</td>
                <td>{{ order_item.totalPrice }}</td>
                <td>
                    <a href="{{ path('order_item_show', {'id': order_item.id}) }}">show</a>
                    <a href="{{ path('order_item_edit', {'id': order_item.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('order_item_new') }}">Create new</a>
{% endblock %}
